{
  "compilerOptions": {
    "target": "es6", // Обновлено с es5 для лучшей совместимости
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@types/*": ["types/*"]
    },
    "types": ["@supabase/supabase-js"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "src/types.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/components/old", "src/components/template", "src/old_page_files", "src/app/settings/page.tsx"]
}